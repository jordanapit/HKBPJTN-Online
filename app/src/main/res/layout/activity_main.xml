<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hkbp.jtn.online.MainActivity">


    <WebView
        android:id="@+id/WebView1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"></WebView>

    <RelativeLayout
        android:id="@+id/errorLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
        <TextView
            android:id="@+id/txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Pastikan internet tersedia untuk menjalankan aplikasi ini. Keluarlah terlebih dahulu dari aplikasi, nyalakan koneksi internet, dan buka kembali aplikasi ini. Terima kasih."
            android:textSize="25dp"
            android:textAlignment="center"/>
    </RelativeLayout>

</RelativeLayout>